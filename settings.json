{
  "liveshare.audio.joinCallBehavior": "accept",
  "liveshare.audio.startCallOnShare": true,
  "liveshare.authenticationProvider": "GitHub",
  "editor.accessibilitySupport": "off",
  "explorer.confirmDragAndDrop": false,
  "files.autoSave": "afterDelay",
  "liveshare.anonymousGuestApproval": "accept",
  "remote.SSH.defaultExtensions": [
    "vscodevim.vim",
    "ms-vsliveshare.vsliveshare-pack"
  ],
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.focusMode": "singleClick",
  "vim.hlsearch": true,
  "vim.leader": "\\",
  "vim.insertModeKeyBindings": [
    {
      // Launch the hash rocket
      "before": ["<C-l>"],
      "after": [" ", "=", ">", " "]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      // remove highlights
      "before": ["<leader>", "n", "h"],
      "commands": [":nohl"]
    },
    {
      // Nerdtree alias for sidebar
      "before": ["<leader>", "n", "t"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      // Nerdtree alias for find file in sidebar
      "before": ["<leader>", "n", "f"],
      "commands": ["workbench.files.action.showActiveFileInExplorer"]
    },
    // Tmux window movements
    {
      // Tmux move down to terminal
      "before": ["<C-a>", "j"],
      "commands": ["workbench.action.terminal.focus"]
    },
    {
      // Tmux move left to terminal
      "before": ["<C-a>", "h"],
      "commands": ["workbench.action.focusSideBar"]
    },
    {
      // Tmux toggle maximize window
      "before": ["<C-a>", "z"],
      "commands": [
        "workbench.action.togglePanel",
        "workbench.action.focusActiveEditorGroup"
      ]
    }
  ],
  "window.zoomLevel": 1,
  "doEndMatch.keywords": {
    "open": ["begin", "rescue", "while", "if", "def", "elsif", "else"],
    "close": ["rescue", "else", "elsif", "end"]
  }
}
